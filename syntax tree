#include<stdio.h>
#include<string.h>
int main()
{
	char a[10];
	char b;
	scanf("%s",&a);
	if(strlen(a)==3	)
	{
		printf("   %c   \n",a[1]);
		printf("  / \\\n");
		printf(" %c   %c",a[0],a[2]);	
	}
	else if(strlen(a)==5)
	{
		printf("   %c   \n",a[1]);
		printf("  / \\\n");
		printf(" %c   %c\n",a[0],a[3]);
		printf("    / \\\n");
		printf("   %c   %c",a[2],a[4]);
	}
	
	
}
